# Backend Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/genai_stacks

# ========================================
# LLM Provider (Choose one or more)
# ========================================

# Option 1: OpenRouter (Recommended - unified API for all models)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Option 2: OpenAI Direct
OPENAI_API_KEY=your-openai-api-key-here

# Option 3: Google Gemini
GOOGLE_API_KEY=your-gemini-api-key-here

# Option 4: Anthropic (or via proxy)
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_BASE_URL=https://api.anthropic.com

# ========================================
# Embeddings
# ========================================
# NOTE: Local embeddings (sentence-transformers) are FREE and work without API keys!
# The app defaults to local embeddings if no provider is specified.

# SerpAPI (optional, for web search)
SERPAPI_KEY=your-serpapi-key-here

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db

# File Upload
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Debug mode
DEBUG=true

